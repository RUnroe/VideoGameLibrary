@model VideoGame 
@{
}

@if (Model == null)
{
    <h1>No Game Provided</h1>
}
else
{
    <div class="videogame-container">
        <div class="videogame-info">
            <div class="text-center">
                <h3>@Model.Title</h3>
                <p>@Model.Year</p>
            </div>
            <table>
                <tbody>
                    <tr>
                        <td>Genre:</td>
                        <td>@Model.Genre</td>
                    </tr>
                    <tr>
                        <td>Platform:</td>
                        <td>@Model.Platform</td>
                    </tr>
                    <tr>
                        <td>Rating:</td>
                        <td>@Model.EsrbRating</td>
                    </tr>
                </tbody>
            </table>
            @if(!string.IsNullOrEmpty(Model.LoanDate) && !string.IsNullOrEmpty(Model.LoanedTo))
            {
                <div class="loan-section">
                    <p>@Model.LoanedTo</p>
                    <p>@Model.LoanDate</p>
                </div>
            }
        </div>
        <img draggable="false" src="@Model.ImgSrc" placeholder="@Model.Title" />
    </div>
}
