@model IEnumerable<VideoGame>
@{
    ViewData["Title"] = "Game Collection";
}

<div>
    <h2 class="text-center">Collection (@Model.Count())</h2>

    <section class="filter-section">
        <input type="text" id="titleFilterInput" placeholder="Search by Title" />


        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="filterDropdownMenu" data-bs-toggle="dropdown"  aria-expanded="false">
                Filter
            </button>
            <div class="dropdown-menu p-4" aria-labelledby="filterDropdownMenu">
                <div class="mb-3">
                    <label for="filterDropdown" class="form-label">ESRB Rating</label>
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <input type="radio" class="btn-check" name="btnradioRating" id="btnradioRating1" autocomplete="off" checked>
                        <label class="btn btn-outline-primary" for="btnradioRating1">All</label>

                        <input type="radio" class="btn-check" name="btnradioRating" id="btnradioRating2" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btnradioRating2">E</label>

                        <input type="radio" class="btn-check" name="btnradioRating" id="btnradioRating3" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btnradioRating3">T</label>

                        <input type="radio" class="btn-check" name="btnradioRating" id="btnradioRating4" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btnradioRating4">M</label>

                        <input type="radio" class="btn-check" name="btnradioRating" id="btnradioRating5" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btnradioRating4">A</label>

                        <input type="radio" class="btn-check" name="btnradioRating" id="btnradioRating6" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btnradioRating6">RP</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="exampleDropdownFormPassword2" class="form-label">Password</label>
                    <input list="browsers" name="browser" id="browser">
                    <datalist id="browsers">
                        <option value="Edge" />
                        <option value="Firefox" />
                        <option value="Chrome" />
                        <option value="Opera" />
                        <option value="Safari" />
                    </datalist>
                </div>

                <button type="submit" class="btn btn-purple">Apply</button>
            </div>
        </div>


    </section>

    <div class="videogame-collection">
        @if (Model == null)
        {
            <h1>No Games Provided</h1>
        }
        else
        {
            foreach (var videogame in Model)
            {
                <partial name="_VideoGame.cshtml" for="@videogame" />
            }
        }
    </div>





    <div class="modal fade" id="rentModal" tabindex="-1" aria-labelledby="rentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rentModalLabel">Rent A Game</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-controller="Collection" asp-action="RentGame" method="post">
                    <div class="modal-body">
                        <h5 class="modal-game-title"></h5>
                        <p>Please enter your name to rent this game:</p>
                        <input type="hidden" name="gameid" id="gameidRent" />
                        <input type="text" id="renterName" name="renterName" placeholder="Name" required />

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-purple">Rent</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Game</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-controller="Collection" asp-action="DeleteGame" method="post">
                    <div class="modal-body">
                        <p>Are you sure you want to delete this game?</p>
                        <input type="hidden" name="gameid" id="gameidDelete" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    


    </div>
